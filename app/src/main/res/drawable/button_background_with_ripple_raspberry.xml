<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="128dp" />
            <gradient
                android:type="radial"
                android:startColor="@color/raspberry_rose"
                android:endColor="?android:windowBackground"
                android:gradientRadius="50%"
                android:centerColor="@color/raspberry_rose"
                android:centerX="50%"
                android:centerY="50%" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="126dp" />
            <stroke
                android:width="7dp"
                android:color="@color/raspberry_rose" />
        </shape>
    </item>
    <item>
        <ripple android:color="?attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <color android:color="@android:color/white" />
            </item>
        </ripple>
    </item>
</layer-list>